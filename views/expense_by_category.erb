<main>

<h1>Expenses by Category for <%= Date.today.strftime("%B %Y") %></h1>

<div class="category-section">
  <h2>Income</h2>
  <div class="categories-grid">
    <% if @income_by_category.empty? %>
      <p>No income records found for this month.</p>
    <% else %>
      <% @income_by_category.each do |category, amount| %>
        <div class="category">
          <a href="javascript:void(0)" onclick="fetchCategoryDetails('income', '<%= category %>')">
            <%= category %>
          </a>: ₹<%= sprintf("%.2f", amount) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

