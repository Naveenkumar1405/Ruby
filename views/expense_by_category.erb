      body {
          font-family: Arial, sans-serif;
      }

      .category-section {
          margin-bottom: 20px;
      }

      .categories-grid {
          display: grid;
          grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
          gap: 10px;
      }

      .category {
          padding: 10px;
          background-color: #f8f8f8;
          border: 1px solid #ddd;
          border-radius: 4px;
      }

      .category a {
          text-decoration: none;
          color: #333;
      }
  </style>
  <script>
      function fetchCategoryDetails(type, category) {
          fetch(`/ajax/category_details/${type}/${encodeURIComponent(category)}`)
              .then(response => response.json())
              .then(data => {
                  if (data.success) {
                      const table = document.createElement('table');
                      table.innerHTML = `
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Details</th>
              </tr>
            `;
                      data.transactions.forEach(transaction => {
                          const row = table.insertRow();
                          row.innerHTML = `
                <td>${transaction.day}</td>
                <td>$${parseFloat(transaction.amount).toFixed(2)}</td>
                <td>${transaction.details}</td>
              `;
                      });
                      document.getElementById('details').innerHTML = ''; // Clear previous details
                      document.getElementById('details').appendChild(table);
                  } else {
                      document.getElementById('details').innerHTML = 'Error loading details.';
                  }
              });
      }
  </script>
