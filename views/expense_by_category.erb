<main>

  <div class="form-wrapper">
    <form action="/get_categories_by_month" method="post">
      <div class="input-group">
        <input type="month" name="month_year" required>
        <button type="submit">Monthly Data</button>
      </div>
      <% if defined?(year) && defined?(month) %>
        <p>Selected Month: <%= month %> <%= year %></p>
      <% end %>
    </form>
  </div>

  <div class="category-section">
    <div class="category-header">
      <h2>Income</h2>
      <div id="totals" class="total-box expense-box">
        <p>₹<span id="total_expense"><%= total_income.to_i %></span></p>
      </div>
    </div>
    <div class="categories-grid income-table income">
      <% if @income_by_category.empty? %>
        <p>No income records found for this month.</p>
      <% else %>
        <% @income_by_category.each do |category, amount| %>
          <div class="category">
            <a href="javascript:void(0)" onclick="fetchCategoryDetails('income', '<%= category %>', '<%= year %>', '<%= month %>')">
              <%= category %>
            </a>: ₹<%= amount.to_i %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="category-section">
    <div class="category-header">
      <h2>Expenses</h2>
      <div id="totals" class="total-box income-box">
        <p>₹<span id="total_income"><%= total_expense.to_i %></span></p>
      </div>
    </div>
    <div class="categories-grid expense-table expense">
      <% if @expense_by_category.empty? %>
        <p>No expense records found for this month.</p>
      <% else %>
        <% @expense_by_category.each do |category, amount| %>
          <div class="category">
            <a href="javascript:void(0)" onclick="fetchCategoryDetails('expense', '<%= category %>', '<%= year %>', '<%= month %>')">
              <%= category %>
            </a>: ₹<%= amount.to_i %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div id="details"></div>
</main>
<script>
    function fetchCategoryDetails(type, category, year, month) {
        fetch(`/category_details/${type}/${encodeURIComponent(category)}?year=${year}&month=${encodeURIComponent(month)}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const table = document.createElement('table');
                    table.innerHTML = `
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Details</th>
              </tr>
            `;
                    data.transactions.forEach(transaction => {
                        const row = table.insertRow();
                        row.innerHTML = `
                <td>${transaction.day}</td>
                <td>${parseFloat(transaction.amount).toFixed(0)}</td>
                <td>${transaction.details}</td>
              `;
                    });
                    document.getElementById('details').innerHTML = ''; // Clear previous details
                    document.getElementById('details').appendChild(table);
                } else {
                    document.getElementById('details').innerHTML = 'Error loading details.';
                }
            });
    }
</script>
